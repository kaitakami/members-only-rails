
<div class="container">
  <h2 class="text-center text-3xl md:text-4xl pt-24 font-bold">Sign Up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "flex justify-center flex-col max-w-2xl align-middle m-auto gap-4 bg-indigo-200 p-5 rounded-md shadow-md mt-3 pt-12" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field m-auto">
      <%= f.label :username, class: "font-medium text-gray-600" %><br />
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "rounded-md bg-transparent border-indigo-300 border-2" %>
    </div>

    <div class="field m-auto">
      <%= f.label :email, class: "font-medium text-gray-600" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded-md bg-transparent border-indigo-300 border-2" %>
    </div>

    <div class="field m-auto">
      <%= f.label :password, class: "font-medium text-gray-600" %><br />
      <% if @minimum_password_length %>
      <em class = "font-medium text-gray-600">(<%= @minimum_password_length %> characters minimum)</em><br />
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "rounded-md bg-transparent border-indigo-300 border-2" %>
    </div>

    <div class="field m-auto">
      <%= f.label :password_confirmation, class: "font-medium text-gray-600" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "rounded-md bg-transparent border-indigo-300 border-2" %>
    </div>

    <div class="actions m-auto mt-2">
      <%= f.submit "Sign up", class: "transform rounded-md bg-indigo-600/95 px-5 py-3 font-medium text-white transition-colors hover:bg-indigo-700" %>
    </div>
  <% end %>

  <p class="text-center mt-3">Instead <span class="hover:underline"><%= render "devise/shared/links" %></span></p>
</div>
