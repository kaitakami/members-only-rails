<div class="container sm:px-8 px-3">
      <h2 class="text-3xl font-bold my-3">Posts</h2>
      <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-3">
        <% posts.each do |post| %>
          <div class="bg-indigo-100 md:rounded-md py-8 px-5 flex flex-col justify-between">
          <div>
            <p class="text-sm font-bold text-gray-500">
              @<%= post.member.username %>
            </p>
            <h3 class="text-xl text-gray-700 font-semibold"><%= post.title %></h3>
            <div class="overflow-y-auto">
              <p class="text-sm text-gray-600 max-h-96 "><%= post.body %></p>
            </div>
          </div>
            <%= link_to '<button class="transform rounded-md bg-indigo-400/95 p-2 font-medium text-white w-full transition-colors hover:bg-indigo-700">View</button>'.html_safe, post_path(post), class: "mt-3" %>
          </div>
        <% end %>
      </div>
    </div>
